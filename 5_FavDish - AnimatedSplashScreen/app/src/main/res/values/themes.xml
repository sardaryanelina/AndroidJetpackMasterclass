<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.1_FavDish" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->

        <!--Step 2: Change primary and secondary colors.-->
        <!--START-->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_dark_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorSecondaryVariant">@color/secondary_dark_color</item>
        <item name="colorOnSecondary">@color/black</item>
        <!--END-->

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!--TODO Step 3: As you can see the Splash screen is not a full screen yet as the ActionBar is visible so let's add the NoActionBar style. This style is auto added by the Android studio when you create the activity as BasicActivity.-->
    <!--START-->
    <style name="Theme.1_FavDish.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.1_FavDish.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.1_FavDish.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <!--END-->
</resources>